<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add some numbers"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/firstNum"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_alignStart="@+id/add"
        android:layout_marginStart="80dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/secondNum"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/add"
        android:layout_alignEnd="@+id/add"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/sumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum"
        android:layout_below="@id/secondNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the sum."
        android:layout_below="@+id/sumButton"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
 />
</RelativeLayout>